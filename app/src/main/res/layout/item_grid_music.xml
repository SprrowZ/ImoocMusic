<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    >
<com.imooc.music.zzg.views.ItemView
    android:id="@+id/music_iv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@mipmap/img1"
    android:scaleType="fitXY"
    android:elevation="1dp"
    app:layout_constraintTop_toTopOf="parent"

    />

<ImageView
    android:id="@+id/number_iv"
    android:layout_width="@dimen/playNumSize"
    android:layout_height="@dimen/playNumSize"
    android:src="@mipmap/play_num"
    android:elevation="2dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/number"
    />
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10.00万"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:textSize="@dimen/titleSize"
        android:elevation="2dp"
        />
    <TextView
        android:id="@+id/music_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/albumMarginSize"
        android:layout_marginLeft="@dimen/albumMarginSize"
        android:textSize="24sp"
        tools:text="收藏列表"
        app:layout_constraintTop_toBottomOf="@+id/music_iv"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
</android.support.constraint.ConstraintLayout>